<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>footer</key>

    <meta>
        <title lang="en">Footer</title>
    </meta>

    <areas>
        <area key="footer">
            <meta>
                <title lang="en">Footer</title>
            </meta>
        </area>
    </areas>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
            </meta>
            <tag name="sulu.node.name"/>
        </property>
        <property name="footerHeadline" type="text_line">
            <meta>
                <title lang="en">Headline</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>
        <property name="footerSubline" type="text_line">
            <meta>
                <title lang="en">Subline</title>
            </meta>
        </property>
        <property name="organisation" type="contact_account_selection">
            <meta>
                <title lang="en">Organisation</title>
                <title lang="de">Organisation</title>
            </meta>
        </property>
    </properties>
</template>
